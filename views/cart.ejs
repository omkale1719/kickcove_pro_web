<% layout('./layouts/boilerplate') %>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container1, .cart-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 20px;
        min-height: 100vh;
        text-align: center;
    }

    .empty-wishlist {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 90%;
        width: 400px;
    }

    h2 {
        font-size: 24px;
        color: #dc3545;
    }

    p {
        margin: 10px 0;
        font-size: 16px;
        color: #666;
    }

    .btn1, .btn2, .btn3, .delete-btn {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        color: white;
        background-color: #690ee8;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

    .btn1:hover, .btn3:hover {
        background-color: #0056b3;
    }

    .btn2 {
        width: 50%;
        margin: 2rem auto;
        background-color: #0d4224;
    }

    .btn2:hover {
        background-color: #1d6722;
    }

    .btn3 {
        margin: 20px 0;
        background-color: #dc3545;
    }

    .delete-btn {
        background-color: #ff4444;
        padding: 6px 12px;
        font-size: 14px;
    }

    .delete-btn:hover {
        background-color: #c82333;
    }

    .empty-image {
        width: 150px;
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        text-align: center;
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }

    th {
        background-color: #f2f2f2;
    }

    .cart-img {
        width: 60px;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
    }

    .total-amount {
        text-align: right;
        margin: 20px 0;
        font-size: 18px;
        font-weight: bold;
        width: 100%;
        padding-right: 10px;
    }

    /* Responsive Styling */
    @media (max-width: 768px) {
        table, thead, tbody, th, td, tr {
            display: block;
            width: 100%;
        }

        thead {
            display: none;
        }

        tr {
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            background-color: white;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        td {
            text-align: left;
            padding: 8px 10px;
            position: relative;
        }

        td::before {
            content: attr(data-label);
            font-weight: bold;
            display: block;
            margin-bottom: 4px;
            color: #555;
        }

        .total-amount {
            text-align: center;
            padding: 10px 0;
        }
    }
</style>

<body>
    <div class="cart-container">
        <% if (cart.length === 0) { %>
            <div class="container1">
                <div class="empty-wishlist">
                    <h2>The Cart is Empty</h2>
                    <p>Your Cart is currently empty. Add items you love to it!</p>
                    <a href="/showall" class="btn1">Browse Products</a>
                    <img src="/assets/images/Ecart.jpeg" alt="Empty Wishlist" class="empty-image">
                </div>
            </div>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.forEach(item => { %>
                        <tr>
                            <td data-label=""></td>
                            <td data-label="Image">
                                <img src="<%= item.img %>" alt="Product Image" class="cart-img">
                            </td>
                            <td data-label="Product"><%= item.title %></td>
                            <td data-label="Price">&#8377;<%= item.price.toLocaleString("en-IN") %></td>
                            <td data-label="Quantity"><%= item.quantity %></td>
                            <td data-label="Total">&#8377;<%= (item.price * item.quantity).toLocaleString("en-IN") %></td>
                            <td data-label="Remove">
                                <form action="/delete-from-cart" method="POST">
                                    <input type="hidden" name="productId" value="<%= item.productId %>">
                                    <button type="submit" class="delete-btn">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <div class="btn-group">
                <a href="/checkoutAll" class="btn3">Checkout All</a>
            </div>

            <div class="total-amount">
                Total Amount: &#8377;<%= cart.reduce((acc, item) => acc + item.price * item.quantity, 0).toLocaleString("en-IN") %>
            </div>
        <% } %>

        <a href="/showall" class="btn2">Continue Shopping</a>
    </div>
</body>
